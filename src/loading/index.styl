+keyframes(ld-float)
  0%, 100%
    animation-timing-function: cubic-bezier(.5,0,1,.5)
  50%
    animation-timing-function: linear
  0%
    transform: translate(0,0)
    box-shadow: 0 0 0 rgba(0,0,0,0.3)
  30%
